<h1>Listing News</h1>

<%= link_to 'Tambah Berita', new_news_path %>


<table>
  <tr>
    <th>Judul</th>
    <th>Isi</th>
    <th>Penulis</th>
  </tr>

  <% @news.each do |news| %>
      <tr>
        <td><%= news.judul %></td>
        <td><%= news.isi %></td>
        <td><%= news.penulis %></td>
        <td><%= link_to 'Show', news_path(news) %></td>
      </tr>
  <% end %>
</table>